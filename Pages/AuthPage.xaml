<Page x:Class="TechnoservisApp.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TechnoservisApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="AuthPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="40"/>
            <TextBlock Text="Логин"/>
            <TextBox Height="30" Name="tbxLogin"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox Height="30" Name="pbxPassword"/>
            <Button Content="Войти" Name="btnEnter" Click="btnEnter_Click"/>
        </StackPanel>
    </Grid>
</Page>
